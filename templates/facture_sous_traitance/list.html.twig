{% extends 'back/base.html.twig' %}
{% block body%}
    <title>Liste Factures</title>
    <body>
    <h1>Liste des Factures</h1>
    <form methode="post"  action="{{ path('recherche') }}">
        <label>Recherche</label>
        <input type="text" name="search"><input type="submit" value="Recherche" class="btn btn-info">
    </form>
    </body>


    <table border="1"  class="table table-light">
        <tr>
            <td  bgcolor="#f5f5dc">Id</td>
            <td bgcolor="#a52a2a">valeurMainOeuvre</td>
            <td  bgcolor="#dc143c">valeurPieceRecharge</td>
            <td  bgcolor="black">dateFacture</td>
            <td  bgcolor="lime">montantFacture</td>
            <td  bgcolor="yellow">IdDemande</td>

        </tr>
        {% for facture in factures %}
            <tr>
                <td  bgcolor="#f5f5dc">{{ facture.codeFacture }}
                    <a href="{{ path('deleteFacture',{'codeFacture':facture.codeFacture}) }}" class="btn-outline-danger" >Delete</a>
                    <a href="{{ path('updateFacture',{'codeFacture':facture.codeFacture}) }}" class="btn-file">Update</a>
                </td>
                <td  bgcolor="#a52a2a">{{ facture.valeurMainOeuvre }}</td>
                <td  bgcolor="#dc143c">{{ facture.valeurPieceRecharge }}</td>
                <td  bgcolor="black">{{ facture.montantFacture }}</td>
                <td  bgcolor="lime">{{ facture.dateFacture ? facture.dateFacture|date('Y-m-d H:i:s') : '' }}</td>
                <td  bgcolor="yellow">{{ facture.idDemandeIntervention.idDemandeIntervention }}</td>


            </tr>
        {% endfor %}
    </table>
    <a href="{{ path('addFacture') }}" class="btn btn-dark">Add Facture</a>
{%endblock%}
