{% extends 'front.html.twig' %}

{% block body %}
    <section class="soccer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 p-0">
                    <div class="section-title">
                        <h3>Our Stade</h3>
                    </div>
                </div>
            </div>
            {% for s in stades %}
            <div class="row">
                <div class="col-lg-3 col-sm-6 p-0">
                    <div class="soccer-item set-bg">
                        <div class="si-tag">{{ s.noms }}</div>
                        <a href="{{ path('stade_edit', {'id': s.id}) }}"><img class="img-responsive" src="{{ asset('Upload/')}}{{ s.image }}" alt="#" /></a>

                        <div class="si-text">
                            <ul>
                                <li><i class="fa fa-edit"></i> {{ s.capacites }}</li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}