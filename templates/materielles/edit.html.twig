        <div class="form-group">
            <label for="exampleInputConfirmPassword1">Etat</label>
            {{ form_widget(form.etat, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            <label for="exampleInputConfirmPassword1">Disponibilite</label>
            {{ form_widget(form.dispo, { 'attr': {'class': 'form-control'} }) }}
