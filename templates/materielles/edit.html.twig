            {{ form_widget(form.file, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            <label for="exampleInputConfirmPassword1">Stade</label>
            {{ form_widget(form.idStade, { 'attr': {'class': 'form-control'} }) }}
        </div>
